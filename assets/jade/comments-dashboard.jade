extends ./layouts/base
include ./mixins/_view_helpers

block vars
  - htmlClass = "html-writer-dashboard"
  - bodyClass = ""
  - pageTitle = "! Writer dashboard"

block pageHeader
  header#top(role="banner")
    .header-content
      +mastheadSignedOut

block content
  .writer-dashboard
    +writerDashboardHeader

    .writer-dashboard-navigation-menu
      nav.writer-dashboard-navigation-menu-nav
        ul.writer-dashboard-navigation-menu-list
          li.writer-dashboard-navigation-menu-list-item
            a.clj-writer-dashboard-navigation-questions-link(href="#")
              span(data-l8n="content:writer-dashboard/questions-navigation-title") !Questions
          li.writer-dashboard-navigation-menu-list-item.on
            a.clj-writer-dashboard-navigation-comments-link.func--comment-dashboard-link(href="#")
              span(data-l8n="content:writer-dashboard/comments-navigation-title") !Comments
          li.writer-dashboard-navigation-menu-list-item
            a.clj-writer-dashboard-navigation-annotations-link(href="#")
              span(data-l8n="content:writer-dashboard/annotations-navigation-title") !Annotations

    .writer-dashboard-body
      .writer-dashboard-navigation
        h2.writer-dashboard-navigation-title(data-l8n="content:writer-dashboard/comments-navigation-title") !Comments
        ul.writer-dashboard-navigation-list.clj-dashboard-navigation-list
          +dashboardNavigationItem(2000)
            | !Objective
          +dashboardNavigationItem(1827, 'on')
            | !Latest draft
          +dashboardNavigationItem(999)
            | !2015-05-10
          +dashboardNavigationItem(210)
            | !2015-05-02
          +dashboardNavigationItem(40)
            | !2015-05-01
          +dashboardNavigationItem(999)
            | !2015-05-10
          +dashboardNavigationItem(210)
            | !2015-05-02
          +dashboardNavigationItem(40)
            | !2015-05-01
          +dashboardNavigationItem(999)
            | !2015-05-10
          +dashboardNavigationItem(210)
            | !2015-05-02
          +dashboardNavigationItem(40)
            | !2015-05-01
          +dashboardNavigationItem(999)
            | !2015-05-10
          +dashboardNavigationItem(210)
            | !2015-05-02
          +dashboardNavigationItem(40)
            | !2015-05-01
          +dashboardNavigationItem(999)
            | !2015-05-10
          +dashboardNavigationItem(210)
            | !2015-05-02
          +dashboardNavigationItem(40)
            | !2015-05-01

      .writer-dashboard-content-container#dashboard-content
        ul.writer-dashboard-filter-list.clj-dashboard-filter-list
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.clj-dashboard-filter-up-votes(href="#")
              i.fa.fa-angle-up
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.clj-dashboard-filter-down-votes(href="#")
              i.fa.fa-angle-down
          li.writer-dashboard-filter-list-item
            a.writer-dashboard-filter-list-item-button.clj-dashboard-filter-paper-clip(href="#")
              i.fa.fa-paperclip

        .writer-dashboard-content.clj-dashboard-content
          .writer-dashboard-content-stats.clj-dashboard-content-stats
            p 1827 comments from 970 people
          .writer-dashboard-comments-pagination
            ul.comments-navigation-controls
              li.comments-navigation-item.comments-navigation-previous.clj-comments-previous
                a.comments-navigation-link.clj-comments-previous-link(href="!previous-link")
                  i.fa.fa-angle-left
                  span.comments-navigation-text(data-l8n="content:secondary-navigation/previous") !Previous
              li.comments-navigation-item.comments-navigation-next.clj-comments-next
                a.comments-navigation-link.clj-comments-next-link(href="!next-link")
                  span.comments-navigation-text(data-l8n="content:secondary-navigation/next") !Next 
                  i.fa.fa-angle-right
          ul.dashboard-comment-list.clj-dashboard-comment-list
            +dashboardCommentItem('Chris Linseman', '28 April 2015 07:41')
              | This is a one line commment about the content

            +dashboardCommentItem('Jane Smith', '29 January 2013 23:00', true)
              | This is a slightly longer comment. Possibly with more insight and relevance

            +dashboardCommentItem('Fake Name', '13 November 2012 09:11')
              | This is a longer comment that should span multiple lines. It's really just to see how the comments look in the dashboard when there is more text to display

